{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "module": "amd",
    "target": "es6",
    "removeComments": false,
    "preserveConstEnums": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "outFile": "../../dist/Aurora.Core.js"
  },
  "include": [ "./**/*.ts" ],
  "exclude": [],
  "compileOnSave": true
}