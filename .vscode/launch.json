{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Build & Run (Examples)",
            "type": "chrome",
            "request": "launch",
            //"url": "",
            //"url": "http://127.0.0.1/Aurora/index.html",
            "file": "${workspaceFolder}/dist/index.html",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
            "preLaunchTask": "build-examples-watch",
            "cwd": "${workspaceRoot}",
            "webRoot": "${workspaceRoot}",
            "runtimeArgs": [
                "--enable-unsafe-es3-apis",
                "--disable-gpu-program-cache",
                "--disable-gpu-shader-disk-cache",
                "--disk-cache-size=1"
            ]
        }
    ]
}