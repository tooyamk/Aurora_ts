{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch Browser",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost.2:8881/wwwroot/index.html",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
            "preLaunchTask": "build",
            "cwd": "${workspaceRoot}",
            "webRoot": "${workspaceRoot}",
            "runtimeArgs": ["--enable-unsafe-es3-apis"]
        }
    ]
}