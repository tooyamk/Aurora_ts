{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "module": "amd",
    "target": "es6",
    "removeComments": false,
    "preserveConstEnums": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "outFile": "./build/aurora.core.js"
  },
  "include": [ "./scripts/src/**/*.ts" ],
  "exclude": [ "./scripts/src/**/_*.ts" ],
  "compileOnSave": true
}